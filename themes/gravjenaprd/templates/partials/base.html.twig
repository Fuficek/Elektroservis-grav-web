    </div>
</div>
{% block bottom %}
<script src={{ url('theme://js/aos.js')|e }}></script>
    <script>
      AOS.init({
      });
    </script>

<script>
  function updateGap() {
    const gridBanner = document.querySelector('.grid-banner');
    const viewportWidth = window.innerWidth;
    const gap = (100/viewportWidth)*600; // Adjust this multiplier as needed
    
    gridBanner.style.gap = `${gap}px`;
  }
  
  // Call the updateGap function initially
  updateGap();
  
  // Attach the updateGap function to the window's resize event
  window.addEventListener('resize', updateGap);
</script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      document.getElementById('scrollLink').addEventListener('click', function(event) {
        event.preventDefault();
        window.scrollBy({
          top: 500,
          left: 0,
          behavior: 'smooth'
        });

        console.log('Scroll successful');
      });
    });
  </script>
{% endblock %}


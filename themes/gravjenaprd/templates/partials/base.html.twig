{% block body %}
    <section id="body">
        <div class="wrapper padding" id="parallax" >
        <div class="pagecontent" >
        {% block content %}{% endblock %}
        </div>
        </div>
    </section>
{% endblock %}

{% block footer %}
    
{% endblock %}
